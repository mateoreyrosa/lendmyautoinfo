@model lendmyautoinfo.Models.ContactUsData
@{

    ViewBag.Title = "Contact";
}

<div class="container" style="padding-top:70px;">
    @if (Model.Success == true)
    {
        <div class="pill pill-text" style="padding-bottom:15px;" id="SuccessAlert">
            Thank you @Model.AlertName! We will be in touch
        </div>
    }

    <p style="padding-top:15px;">Got a question for us? We're happy to answer. Fill out the form and we'll get back to you as soon as we can.</p>
    @using (Html.BeginForm("Contact", "Home", FormMethod.Post, new { enctype = "multipart/form-data" }))
    {
        <div class="form-group">
            <label for="Name">Name</label>
            @Html.TextBoxFor(m => m.Name, null, new { @class = "form-control", @placeholder = "Name" })
        </div>
        <div class="form-group">
            <label for="EmailAddress">Email</label>
            @Html.TextBoxFor(m => m.EmailAddress, null, new { @class = "form-control", @placeholder = "Email Address" })
        </div>
        <div class="form-group">
            <label for="Message">Message</label>
            @Html.TextAreaFor(m => m.Message, new { @class = "form-control", @placeholder = "Message" })
        </div>
        <button class="btn btn-secondary" type="submit">Send Message</button>

    }
</div>



        @section scripts{
            <script>
                $(document).ready(function () {
                    $('#headerPic').attr("style", "background-image:url('../../Images/contactuslendmyauto.jpg')");
                    $("h1.heading").text("Contact Us");

                    
                });
                document.addEventListener("DOMContentLoaded", function (event) {
                    setTimeout(function () {
                        var updateAlert = document.getElementById("SuccessAlert");
                        updateAlert.style.display = "none";
                    }, 5000);
                });
            </script>

        }
