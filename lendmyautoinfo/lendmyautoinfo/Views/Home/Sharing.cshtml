
@{

    Layout = "~/Views/Shared/_SharingLayout.cshtml";
}

<div class="container" style="padding-top:70px; text-align:center">
    <h1>World’s fleet of cars at your fingertips</h1>

    
  <hr />
        <h2>3 Simple Steps</h2>
    
        <div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel">
            <ol class="carousel-indicators">
                <li data-target="#carouselExampleIndicators" data-slide-to="0" class="active"></li>
                <li data-target="#carouselExampleIndicators" data-slide-to="1"></li>
                <li data-target="#carouselExampleIndicators" data-slide-to="2"></li>
            </ol>
            <div class="container">
                <div class="carousel-inner">
                    <div class="container">
                        <div id="carouselContent" class="carousel slide" data-ride="carousel">
                            <div class="carousel-inner" role="listbox">
                                <div class="carousel-item active text-center p-4" style="height :200px;">
                                    <img src="~/Images/LendProfile.png" style="width:10%; margin-top:15px;" />
                                    
                                                <div class="step-title" style="margin-top:15px;">
                                                   Step 1: Create
                                                </div>
                                                <div class="step-description">
                                                    Create a free online profile
                                                </div>
                                </div>
                                <div class="carousel-item text-center p-4"  style="height: 200px;">
                                        <img src="~/Images/LendCarSearch.png" style="width:10%;"  />
                                        <div class="step-title">
                                           Step 2: Find
                                        </div>
                                        <div class="step-description">
                                            Pay a low cost yearly subscription
                                        </div>
                                </div>
                                <div class="carousel-item text-center p-4"  style="height: 200px;">
                                        <img src="~/Images/unlockcar.png" style="width:10%;" />
                                        <div class="step-title">
                                           Step 3: Unlock
                                        </div>
                                        <div class="step-description">
                                            Join a community of “car-sharers”
                                        </div>
                                </div>
                            </div>
                                <a class="carousel-control-prev" href="#carouselContent" role="button" data-slide="prev">
                                    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                                    <span class="sr-only">Previous</span>
                                </a>
                                <a class="carousel-control-next" href="#carouselContent" role="button" data-slide="next">
                                    <span class="carousel-control-next-icon" aria-hidden="true"></span>
                                    <span class="sr-only">Next</span>
                                </a>
                            </div>
                        </div>
                </div>
            </div>
        </div>
        </div>

