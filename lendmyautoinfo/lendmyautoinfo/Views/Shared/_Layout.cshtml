<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Lend My Auto</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <header id="headerPic">
        <h1 style="font-size:73px" class="heading"></h1>
        <p></p>
    </header>
    <nav class="navbar navbar-expand-lg fixed-top navbar-light">

        <div class="container" style="margin-top:30px;">
            <a href="/Home"><img src="~/Images/lendmyauto2.png" style="width:70%;" /></a>
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>

            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav flex-fill w-100 flex-nowrap justify-content-end">
                    <li class="nav-item active">
                        <a class="nav-link" style="color:#E6E7E7;" href="/Home">Home <span class="sr-only">(current)</span></a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" style="color:#BDBDBE" href="/Home/About">About</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" style="color:#BDBDBE" href="/Home/Sharing">Community of Car Sharers</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" style="color:#BDBDBE" href="/Home/Contact">Contact Us</a>
                    </li>
                </ul>
            </div>
        </div>

    </nav>

    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>Copyright &copy; @DateTime.Now.Year - LendMyAuto</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @Scripts.Render("~/bundles/navbar")
  
    @RenderSection("scripts", required: false)
</body>
</html>

